<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@android:drawable/title_bar">

<LinearLayout
        android:id="@+id/screen"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@android:drawable/title_bar">

    <Button android:id="@+id/title_left_text"
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:layout_height="26dip"
            android:textColor="#ffffffff"
            android:layout_margin="3dip"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_weight="1"
            android:background="@drawable/one_pixel_border_button"
            />

    <EditText android:id="@+id/search_box_sender"
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:layout_height="26dip"
            android:textColor="#ff000000"
            android:layout_margin="3dip"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:background="#ffffffff"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:hint="@string/search_hint_sender"
            android:visibility="gone"
            android:layout_weight="1"
            />
    <ImageView android:id="@+id/sender_clear"
            android:layout_width="wrap_content"
            android:layout_height="26dip"
            android:src="@drawable/x"
            android:layout_margin="3dip"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:visibility="gone"
            />

    <EditText android:id="@+id/search_box_subject"
            android:gravity="center_vertical|center"
            android:layout_width="wrap_content"
            android:layout_height="26dip"
            android:textColor="#ff000000"
            android:layout_margin="3dip"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:background="#ffffffff"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:hint="@string/search_hint_subject"
            android:visibility="gone"
            android:layout_weight="1"
            />
            
    <ImageView android:id="@+id/subject_clear"
            android:layout_width="wrap_content"
            android:layout_height="26dip"
            android:src="@drawable/x"
            android:layout_margin="3dip"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:visibility="gone"
            />
            

    <TextView android:id="@+id/title_right_text"
            android:gravity="center_vertical|right"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffffff"
            android:shadowRadius="0.1"
            android:shadowDy="1"
            android:layout_weight="1"
            android:shadowColor="#ff000000"
            />

    <Button android:id="@+id/account_title_button"
            android:gravity="center_vertical|right"
            android:visibility="gone"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="26dip"
            android:layout_gravity="center_vertical|right"
            android:textColor="#ffffffff"
            android:layout_margin="3dip"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/one_pixel_border_button" />

    <ProgressBar android:id="@+id/title_progress_icon"
            style="?android:attr/progressBarStyleSmallTitle"
            android:visibility="gone"
            android:minWidth="10dip"
            android:layout_gravity="center_vertical|right"
            android:paddingRight="1dip"
            android:layout_marginLeft="4dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>

<LinearLayout
        android:id="@+id/search_box_row"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@android:drawable/title_bar">

            <EditText android:id="@+id/search_box_message"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:textColor="#ff000000"
                android:layout_margin="3dip"
                android:paddingTop="0dip"
                android:paddingBottom="0dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:background="#ffffffff"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:hint="@string/search_hint_message"
                android:visibility="gone"
                android:layout_weight="1"
                />
                
            <ImageView android:id="@+id/message_clear"
                android:layout_width="wrap_content"
                android:layout_height="26dip"
                android:src="@drawable/x"
                android:visibility="gone"
                android:layout_margin="3dip"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
                />
    </LinearLayout>
    
    <Button android:id="@+id/search_done"
            android:gravity="center_vertical|center"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:textColor="#ffffffff"
            android:layout_margin="3dip"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_weight="1"
            android:text="@string/search_done"
            android:background="@drawable/one_pixel_border_button"
            android:visibility="gone"
            />

    
    
</LinearLayout>